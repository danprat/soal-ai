{
  "manifest_version": 3,
  "name": "Soal Scanner AI",
  "version": "1.0",
  "description": "Takes a screenshot of a question and sends it to Gemini AI for an answer.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "https://generativelanguage.googleapis.com/*"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "scan-full-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Scan seluruh halaman dengan AI"
    },
    "snipping-tool": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Pilih area soal dengan snipping tool"
    },
    "toggle-floating-menu": {
      "description": "Toggle floating scan menu"
    }
  }
}